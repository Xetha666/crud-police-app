---
import ToastDev from "@/components/ToastDev.astro";
import User from "@/components/User.astro";

const options = [
  { name: "Personal", link: "/options/personal" },
  { name: "Vacaciones", link: "/options/vacaciones" },
  { name: "Comisiones", link: "/options/comisiones" },
  { name: "Licencias", link: "/options/licencias" },
  { name: "Régimen", link: "/options/regimen" },
  { name: "Descanso", link: "/options/descanso" },
  { name: "Cambiados", link: "/options/cambiados" },
  { name: "Permisos", link: "/options/permisos" },
  { name: "Referencias", link: "/options/referencias" },
  { name: "Cursos", link: "/options/cursos" },
  { name: "Covid-19", link: "/options/covid-19" },
  { name: "Reincorporación", link: "/options/reincorporacion" },
];
---

<section class="max-w-5xl mx-auto my-0 h-screen flex flex-col justify-center">
  <ToastDev/>
  <User/>
  <h1 class="text-5xl font-bold text-center animate-fade-in-down">
    Departamento de Investigación Criminal
  </h1>
  <div class="grid grid-cols-4 py-8 animate-fade-in">
    {
      options.map((option) => (
        <a
          href={option.link}
          class="m-4 p-6 text-center border-2 border-gray-300 rounded-lg hover:text-black hover:bg-base-content transition-colors duration-500 ease-in-out"
        >
          <h2 class="text-2xl font-semibold">{option.name}</h2>
        </a>
      ))
    }
  </div>
  <p class="text-center animate-fade-in-up">
    Dirección: Jr. Arica N°166 - Urb. La Merced - Chanchamayo - Telf. 945312375
    - Email: dpchanchamayo.depincriaj@policia.gob.pe
  </p>
</section>
