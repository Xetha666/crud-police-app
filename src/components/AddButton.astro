<script>
  const inputEgreso = document.querySelector(
    '[name="egreso_pnp"]',
  ) as HTMLInputElement;

  const camposTiempo = [
    document.querySelector(
      '[name="tiempo_servicio_anios"]',
    ) as HTMLInputElement,
    document.querySelector(
      '[name="tiempo_servicio_meses"]',
    ) as HTMLInputElement,
    document.querySelector('[name="tiempo_servicio_dias"]') as HTMLInputElement,
  ];

  function actualizarTiempoServicio() {
    const fEgreso = inputEgreso?.value;

    if (!fEgreso) {
      camposTiempo.forEach((c) => {
        if (c) {
          c.value = "";
          c.classList.add("opacity-50");
        }
      });
      return;
    }

    const egreso = new Date(fEgreso + "T00:00:00");
    const hoy = new Date();

    if (egreso > hoy) {
      camposTiempo.forEach((c) => {
        if (c) c.value = "0";
      });
      alert("No puedes poner una fecha mayor a la de hoy, seras webón");
      return;
    }

    // Lógica: HOY menos EGRESO
    let years = hoy.getFullYear() - egreso.getFullYear();
    let months = hoy.getMonth() - egreso.getMonth();
    let days = hoy.getDate() - egreso.getDate();

    if (days < 0) {
      months--;
      const ultimoDiaMesPasado = new Date(
        hoy.getFullYear(),
        hoy.getMonth(),
        0,
      ).getDate();
      days += ultimoDiaMesPasado;
    }

    if (months < 0) {
      years--;
      months += 12;
    }

    if (camposTiempo[0]) camposTiempo[0].value = years.toString();
    if (camposTiempo[1]) camposTiempo[1].value = months.toString();
    if (camposTiempo[2]) camposTiempo[2].value = days.toString();

    camposTiempo.forEach((c) => c?.classList.remove("opacity-50"));
  }

  inputEgreso?.addEventListener("change", actualizarTiempoServicio);

  //EDAD
  const inputFechaNac = document.querySelector(
    '[name="fecha_nac"]',
  ) as HTMLInputElement;
  const inputEdad = document.querySelector('[name="edad"]') as HTMLInputElement;

  function calcularEdadExacta() {
    const fechaNacimiento = inputFechaNac?.value;

    if (!fechaNacimiento) {
      if (inputEdad) inputEdad.value = "";
      return;
    }

    // Usamos el formato ISO local para evitar desfases de zona horaria
    const nacimiento = new Date(fechaNacimiento + "T00:00:00");
    const hoy = new Date();

    let edad = hoy.getFullYear() - nacimiento.getFullYear();
    const mes = hoy.getMonth() - nacimiento.getMonth();

    // Si aún no ha llegado su mes, o es su mes pero no su día de cumple, restamos 1
    if (mes < 0 || (mes === 0 && hoy.getDate() < nacimiento.getDate())) {
      edad--;
    }

    if (inputEdad) {
      // Evitamos edades negativas por si el usuario se equivoca de año
      inputEdad.value = edad >= 0 ? edad.toString() : "0";
    }
  }

  // Escuchamos cuando el usuario cambia la fecha
  inputFechaNac?.addEventListener("change", calcularEdadExacta);
</script>

<script>
  import { personalSchema } from "@/lib/schemas/personal";

  const form = document.getElementById("form_personal") as HTMLFormElement;
  const modal = document.getElementById("add_modal") as HTMLDialogElement;
  const submitBtn = form?.querySelector('button[type="submit"]');
  const modalPreview = document.getElementById(
    "modal_preview_foto",
  ) as HTMLImageElement;

  window.addEventListener(
    "keydown",
    (event) => {
      if (event.key === "Escape" && modal?.open) {
        event.preventDefault();
        event.stopImmediatePropagation();

        const activeElement = document.activeElement as HTMLInputElement;
        const isInput = activeElement && activeElement.tagName === "INPUT";

        if (isInput) {
          activeElement.value = "";
        }
      }
    },
    true,
  );

  // --- A. LÓGICA DE ENVÍO (POST / PUT) ---
  form?.addEventListener("submit", async (e) => {
    e.preventDefault();
    const mode = form.getAttribute("data-mode");
    const id = form.getAttribute("data-id");

    const formData = new FormData(form);
    const data = Object.fromEntries(formData);

    try {
      personalSchema.parse(data);

      const url = mode === "edit" ? `/api/personal/${id}` : "/api/personal";
      const method = mode === "edit" ? "PUT" : "POST";

      const response = await fetch(url, {
        method: method,
        body: formData,
      });
      console.log("Datos del Formulario en Frontend", formData)
      if (response.ok) {
        alert(
          mode === "edit"
            ? "¡Registro actualizado con éxito!"
            : "¡Registro guardado!",
        );
         window.location.reload();
      } else {
        const result = await response.json();
        alert(`Error: ${result.error}`);
      }
    } catch (error: any) {
      if (error.errors) {
        const messages = error.errors.map((err: any) => err.message).join("\n");
        alert(`Validación fallida - Formato requerido: ${messages}`);
      } else {
        alert("Ocurrió un error inesperado.");
      }
    }
  });

  // --- B. LÓGICA DE ESCUCHA PARA EDITAR (REFORZADA) ---
  window.addEventListener("abrir-editar-personal", async (e: any) => {
  const id = e.detail.id;
  if (!form || !modal) return;

  form.reset();

  try {
    const response = await fetch(`/api/personal/${id}`);
    const data = await response.json();
    console.log("Datos recibidos armas para edición:", data.weapons);

    const fill = (obj: any) => {
      if (!obj) return;
      Object.entries(obj).forEach(([key, value]) => {
          const input = form.querySelector(`[name="${key}"]`) as HTMLInputElement;
          if (input) {
            if (input.type === 'file') return; // Saltamos el input de archivo
            input.value = (value !== null && value !== undefined) ? String(value) : "";
        }
      });
    };

    fill(data.Personal);
    fill(data.InfoPNP);
    fill(data.VidaSocial);

    // Lógica de la foto
    if (modalPreview) {
      if (data.Personal?.foto && data.Personal.foto !== "--") {
        modalPreview.src = data.Personal.foto;
        modalPreview.classList.remove("hidden");
      } else {
        modalPreview.classList.add("hidden");
      }
    }

    form.setAttribute("data-mode", "edit");
    form.setAttribute("data-id", id);
    if (submitBtn) submitBtn.textContent = "ACTUALIZAR REGISTRO";
    const title = modal.querySelector("h3");
    if (title) title.textContent = "✏️ EDITANDO REGISTRO DE PERSONAL";

    modal.showModal();
  } catch (error) {
    console.error("Error al cargar datos:", error);
  }});

      

  // --- C. FUNCIÓN DE LIMPIEZA (La que no veías) ---
  (window as any).prepararNuevoRegistro = () => {
    if (!form) return;
    form.reset();
    form.removeAttribute("data-mode");
    form.removeAttribute("data-id");

    if (modalPreview) {
      modalPreview.src = "";
      modalPreview.classList.add("hidden");
    }

    if (submitBtn) submitBtn.textContent = "GUARDAR REGISTRO";
    const title = modal?.querySelector("h3");
    if (title) title.textContent = "Ficha Integral de Registro de Personal";
  };
</script>
